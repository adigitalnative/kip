<div class="row">
  <div class="span6">
    <h1>TripPlanner</h1>
    <p class="lead">Plan your family's day</p>
  </div>

  <% if current_user %>
  <div class="row">
    <div class="span3">
      <div class="userinfo">
        <p>Current User:<br />
          <%= current_user.email %></p>
        <p><%= link_to('Sign Out', destroy_user_session_path, :method => :delete, class: "btn") %>
      </div>
    </div>
  </div>
<% end %>
</div>

